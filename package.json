{
  "name": "thaiquest",
  "version": "1.0.0",
  "private": true,
  "description": "Interactive Thai quizzes - static site",
  "scripts": {
    "lint": "eslint \"js/**/*.js\" --max-warnings=0",
    "lint:fix": "eslint \"js/**/*.js\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate:json": "node -e \"const fs=require('fs');const glob=require('glob');let ok=true;glob.sync('data/**/*.json').forEach(f=>{try{JSON.parse(fs.readFileSync(f,'utf8'));}catch(e){console.error('Invalid JSON:',f);ok=false;}});process.exit(ok?0:1);\""
  },
  "devDependencies": {
    "eslint": "^9.11.0",
    "@eslint/js": "^9.11.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^15.8.0",
    "prettier": "^3.3.3",
    "glob": "^11.0.0"
  }
}
